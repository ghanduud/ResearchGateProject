
@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log in
    </a>
    <span style="padding: 5px;"></span>

    <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a>
}
else
{
    
    @*User profile section*@
    <div>
        <button class="btn btn-outline-success " type="button" id="profile-btn"
                aria-expanded="false" asp-controller="Account" asp-action="ShowProfile">
            <i class="bi bi-person-badge"></i> @*Hello @UserManager.GetUserName(User)*@
            @Html.ActionLink("Hello " + UserManager.GetUserName(User) + "!", "ShowProfile", "Auther", routeValues: null, htmlAttributes: new { style = "color:green", title = "Profile" })
        </button>
        
    </div>
    
    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i> Log out
        </button>
    </form>
}

