@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.UserName
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ProfilePictureURL" width="100%" alt="Profile Picture">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            @*<p class="card-text">@item.Description</p>*@
                             <p class="card-text"><b>User Name: </b>@item.UserName</p>
                            <p class="card-text"><b>First Name: </b>@item.FirstName</p>
                            <p class="card-text"><b>Last Name: </b>@item.LastName</p>
                            <p class="card-text"><b>University: </b>@item.Uni</p>
                        

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="AutherInfomation" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show profile</a>
                              
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

