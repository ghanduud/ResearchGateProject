@*@model ApplicationUser*@
@model  ResearchGateProject.Data.ViewModels.Paper_comentsVM
@{
    ViewData["Title"] = "Auther Information";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.User.UserName
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.User.ProfilePictureURL" width="100%" alt="Profile Picture">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                      
                        <p class="card-text"><b>First Name: </b>@Model.User.FirstName</p>
                        <p class="card-text"><b>Last Name: </b>@Model.User.LastName</p>
                        <p class="card-text"><b>Universty: </b>@Model.User.Uni</p
                        <p class="card-text"><b>Department: </b>@Model.User.Dept</p>
                                           

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">     
                        <p class="card-text">
                            <a class="btn btn-primary float-right" asp-controller="Auther" asp-action="Index">
                                Back to List
                            </a>                           
                        </p>
                        <br />
                         <h3>Published Paper</h3>
                     <div class="row">
                        
    @foreach (var item in Model.User.ApplicationUsers_Papers)
    {
        <div class="col-md-12 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 720px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Paper.Title
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.PaperId"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                 
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Paper.Body</p>
                            <p class="card-text"><b>Start Date: </b>@item.Paper.CreatedDate.ToString("dd MMM yy")</p>                          

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-controller="Paper" asp-action="Details" asp-route-id="@item.PaperId">
                                    <i class="bi bi-eye-fill"></i> Paper Details
                                </a>
                              
                            </p>
                        </div>
                       <br />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
